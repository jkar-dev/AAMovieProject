<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Header" parent="ShadowEffectText">
        <item name="android:fontFamily">@font/roboto_black</item>
        <item name="android:textColor">@color/light_gray</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="NameOfActor">
        <item name="android:fontFamily">@font/roboto_black</item>
        <item name="android:textColor">@color/light_gray</item>
        <item name="android:textSize">12sp</item>
        <item name="android:lineSpacingExtra">2sp</item>
    </style>

    <style name="title" parent="ShadowEffectText">
        <item name="android:fontFamily">@font/roboto_black</item>
        <item name="android:textColor">@color/light_gray</item>
        <item name="android:textSize">40sp</item>
    </style>

    <style name="ShadowEffectText">
        <item name="android:shadowDy">6</item>
        <item name="android:shadowRadius">12</item>
        <item name="android:shadowColor">@color/black</item>
    </style>

    <style name="MyRatingBar" parent="Widget.AppCompat.RatingBar.Small">
        <item name="android:progressTint">@color/bright_pink</item>
        <item name="android:secondaryProgressTint">@color/bright_pink</item>
        <item name="android:progressBackgroundTint">@color/white</item>
        <item name="android:numStars">5</item>
        <item name="android:isIndicator">true</item>
    </style>
</resources>